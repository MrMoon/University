from multiprocessing import Process, Queue

def get_directories():
  """
  This function prompts the user for 5 directory paths and adds them to a queue.
  """
  queue = Queue()
  for i in range(5):
    path = input(f"Enter directory path {i+1}: ")
    queue.put(path)
  return queue

def check_directories(queue):
  """
  This function retrieves paths from the queue and checks if they exist, printing a message if found.
  """
  while not queue.empty():
    path = queue.get()
    if os.path.exists(path):
      print(f"{path} exists")

if __name__ == "__main__":
  # Create a queue to share data between processes
  queue = Queue()

  # Create the first process to get directory paths
  p1 = Process(target=get_directories, args=(queue,))
  p1.start()

  # Create the second process to check directory existence
  p2 = Process(target=check_directories, args=(queue,))
  p2.start()

  # Wait for both processes to finish
  p1.join()
  p2.join()

  print("All directory checks completed.")
